# affects github presentation and participating editors.
# see http://editorconfig.org/
# spec at https://editorconfig-specification.readthedocs.io/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{sky,bzl,bazel}]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
