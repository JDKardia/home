    {
      "description": "Right Option Key -> COOL Key (all right mods)",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "modifiers": [
