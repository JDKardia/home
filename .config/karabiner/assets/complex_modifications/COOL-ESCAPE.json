{
  "title": "COOL (COmmand+Option+contrOL)(⌘⌥⌃) key rules, plus some other useful tidbits",
  "rules": [
    {
      "description": "escape -> tap==ESC and hold==COOL (all right mods)",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "modifiers": [
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "escape -> tap==ESC and hold==COOL (all left mods)",
      "manipulators": [
        {
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle escape with LEFT_SHIFT + RIGHT_SHIFT",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ],
              "optional": [
                "escape"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ],
              "optional": [
                "escape"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "COOL + h/j/k/l == Arrow Keys (any mods)",
      "manipulators": [
        {
          "from": {
            "key_code": "k",
